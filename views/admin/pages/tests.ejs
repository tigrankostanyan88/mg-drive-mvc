<!doctype html>
<html lang="en">
<head><%- include('../parts/head.ejs') %></head>
<body>
    <!-- Navbar -->
    <%- include('../parts/navbar.ejs') %>
    
    <!-- Sidebar -->
    <%- include('../parts/sidebar.ejs') %>
     <!-- Main Content -->
    <main class="main-content">
        <section id="tests">
        <div class="page-header">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Վահանակ</a></li>
                        <li class="breadcrumb-item active">Թեստեր</li>
                    </ol>
                </nav>
                <h1 class="page-title">Թեստերի կառավարում</h1>
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTestModal">
                <i class="bi bi-plus-circle me-2"></i>Ավելացնել նոր թեստ
            </button>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="icon primary">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                    <div class="label">Ընդհանուր թեստեր</div>
                    <div class="number" id="totalTestsCount">0</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="icon success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="label">Ակտիվ թեստեր</div>
                    <div class="number" id="activeTestsCount"><%- getTests ? getTests.length : 0 %></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="icon warning">
                        <i class="bi bi-x-circle"></i>
                    </div>
                    <div class="label">Անջատված թեստեր</div>
                    <div class="number" id="inactiveTestsCount">0</div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-row">
            <div class="row g-3">
                <div class="col-md-12">
                    <input type="text" id="searchTest" class="form-control" placeholder="Փնտրել թեստ…">
                </div>
            </div>
        </div>
        <div class="form-group mb-4">
            <label for="aboutDescription" class="form-label fw-bold">Описание</label>
        </div>
        <!-- Tests Table -->
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="testsTable" class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Թեստի անուն</th>
                                <th>Հարցերի քանակ</th>
                                <th>Վերջին թարմացում</th>
                                <th>Գործողություններ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Tests will be rendered here by JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white">
                <nav aria-label="Page navigation">
                    <ul class="pagination mb-0 justify-content-center">
                        <li class="page-item disabled"><a class="page-link" href="#">Նախորդ</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Հաջորդ</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        </section>
    </main>

    <!-- Add Test Modal -->
    <div class="modal fade" id="addTestModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ավելացնել նոր թեստ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Թեստի անուն</label>
                            <input type="text" class="form-control" placeholder="Մուտքագրեք թեստի անունը">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Խումբ</label>
                            <select class="form-select">
                                <option>Ընտրել խումբ</option>
                                <option>Խումբ A</option>
                                <option>Խումբ B</option>
                                <option>Խումբ C</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Հարցերի քանակ</label>
                            <input type="number" class="form-control" placeholder="30">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Կարգավիճակ</label>
                            <select class="form-select">
                                <option>Ակտիվ</option>
                                <option>Անջատված</option>
                                <option>Սևագիր</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Նկարագրություն</label>
                            <textarea class="form-control" rows="3" placeholder="Մուտքագրեք նկարագրությունը"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Փակել</button>
                    <button type="button" class="btn btn-primary">Պահպանել թեստը</button>
                </div>
            </div>
        </div>
    </div>


    <%- include('../parts/scripts.ejs') %>
</body>
</html>