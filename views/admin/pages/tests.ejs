<!doctype html>
<html lang="en">
<head><%- include('../parts/head.ejs') %></head>
<body>
    <!-- Navbar -->
    <%- include('../parts/navbar.ejs') %>
    
    <!-- Sidebar -->
    <%- include('../parts/sidebar.ejs') %>
    <%- include('../parts/alert') %>
    <%- include('../parts/confirm') %>
     <!-- Main Content -->
    <main class="main-content">
        <section id="tests">
            <div class="page-header">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Վահանակ</a></li>
                            <li class="breadcrumb-item active">Թեստեր</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">Թեստերի կառավարում</h1>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTestModal">
                    <i class="bi bi-plus-circle me-2"></i>Ավելացնել նոր թեստ
                </button>
            </div>

            <!-- Summary Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="icon primary">
                            <i class="bi bi-file-earmark-text"></i>
                        </div>
                        <div class="label">Ընդհանուր թեստեր</div>
                        <div class="number" id="totalTestsCount"><%- getTests ? getTests.length : 0 %></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="icon success">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="label">Թեստերի բոլոր հարցերը</div>
                        <div class="number" id="activeTestsCount"><%- testsAllQuestions ? testsAllQuestions.length : 0 %></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="icon warning">
                            <i class="bi bi-x-circle"></i>
                        </div>
                        <div class="label">Միջին հարցերի քանակ</div>
                        <div class="number" id="inactiveTestsCount"><%- averageQuestions ? averageQuestions : 0 %></div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="filter-row">
                <div class="row g-3">
                    <div class="col-md-12">
                        <input type="text" id="searchInput" class="form-control" placeholder="Փնտրել թեստ…">
                    </div>
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="aboutDescription" class="form-label fw-bold">Описание</label>
            </div>
            <!-- Tests Table -->
            <% if(getTests) { %>
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table id="testsTable" class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Թեստի անուն</th>
                                    <th>Հարցերի քանակ</th>
                                    <th>Ավելացվել է</th>
                                    <th>Վերջին թարմացում</th>
                                    <th class="d-flex justify-content-end">Գործողություններ</th>
                                </tr>
                            </thead>
                            <!-- content -->
                            <tbody class="pagination-container">
                                <% getTests.forEach(t => { %>
                                    <tr class="test-row">
                                        <td><%- t.id %></td>
                                        <td><%- t.title %>-<%-t.number %></td>
                                        <td><%- t.questions.length %></td>
                                        <td><%- helpers.getDate(t.createdAt) %></td>
                                        <td><%- helpers.getDate(t.updatedAt) %></td>
                                        <td class="d-flex justify-content-end">
                                            <div class="action-icons">
                                                <button 
                                                    type="button" 
                                                    class="btn btn-outline-warning edit-btn" 
                                                    title="Խմբագրել"
                                                    data-bs-toggle="modal"
                                                    data-json='<%- JSON.stringify(t) %>'
                                                    data-bs-target="#editTestModal"
                                                >
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                                <form action="/api/v1/tests/<%- t.id %>" method="delete">
                                                    <button type="submit" class="btn btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Pagination -->
                <div class="card-footer bg-white">
                    <div id="testPage"
                        class="pagination-container d-flex justify-content-center"
                        data-current-page="1"
                        data-items-per-page="4"
                        data-total-items="<%= getTests.length %>">
                    </div>
                </div>
            </div>
            <% } else { %>
                <div class="d-flex justify-content-center align-items-center p-5">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    Ոչ մի թեստ չի գտնվել
                </div>
            <% } %>
        </section>
    </main>

    <!-- Edit Modal -->
    <div class="modal fade" id="editTestModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editForm" method="PATCH">
                    <div class="modal-header">
                        <h5 class="modal-title">Խմբագրել թեստը</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Վերնագիր</label>
                            <input type="text" name="title" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Փակել
                        </button>
                        <button type="submit" class="btn btn-warning">
                            Պահպանել
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Test Modal -->
    <div class="modal fade" id="addTestModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/api/v1/tests" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Ավելացնել նոր թեստ</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Թեստի անուն</label>
                            <input type="text" name="title" class="form-control" placeholder="Մուտքագրեք թեստի անունը">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Փակել</button>
                        <button type="submit" class="btn btn-primary">Պահպանել թեստը</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../parts/scripts.ejs') %>
</body>
</html>