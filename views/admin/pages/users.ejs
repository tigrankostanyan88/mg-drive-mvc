<!doctype html>
<html lang="en">

<head><%- include('../parts/head.ejs') %></head>

<body>
    <!-- Navbar -->
    <%- include('../parts/navbar.ejs') %>

    <!-- Sidebar -->
    <%- include('../parts/sidebar.ejs') %>
    <!-- Main Content -->
    <!-- Main Content -->
    <main class="main-content">
        <section id="users">
            <div class="page-header">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Վահանակ</a></li>
                            <li class="breadcrumb-item active">Օգտվողներ</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">Օգտվողների & ուսանողների կառավարում</h1>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                    <i class="bi bi-plus-circle me-2"></i>Ավելացնել նոր ուսանող
                </button>
            </div>

            <!-- Summary Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="icon primary">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="label">Ընդհանուր օգտվողներ</div>
                        <div class="number">1,247</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="icon success">
                            <i class="bi bi-person-check"></i>
                        </div>
                        <div class="label">Ուսանողներ</div>
                        <div class="number">1,180</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="icon warning">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <div class="label">Ադմիններ & Ինստրուկտորներ</div>
                        <div class="number">67</div>
                    </div>
                </div>
            </div>

            <!-- Search and Filter Bar -->
            <div class="filter-row mb-4">
                <div class="row g-3">
                    <div class="col-md-8">
                        <label class="form-label">Փնտրել</label>
                        <input type="text" class="form-control" id="searchInput" placeholder="Փնտրել ուսանող…">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Կարգավիճակ</label>
                        <select class="form-select" id="filterStatus">
                            <option value="">Բոլորը</option>
                            <option value="Ակտիվ">Ակտիվ</option>
                            <option value="Դադարեցված">Դադարեցված</option>
                            <option value="Սպասման մեջ">Սպասման մեջ</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Users Table -->
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Անուն Ազգանուն</th>
                                    <th>Ռոլ</th>
                                    <th>Հեռախոս</th>
                                    <th>Էլ. փոստ</th>
                                    <th>Քաղաք</th>
                                    <th>Գրանցման ամսաթիվ</th>
                                    <th>Կարգավիճակ</th>
                                    <th>Գործողություններ</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Add User Modal -->

    <div class="modal fade" id="addUserModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ավելացնել նոր ուսանող</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Անուն</label>
                                <input type="text" class="form-control" placeholder="Մուտքագրեք անունը">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Ազգանուն</label>
                                <input type="text" class="form-control" placeholder="Մուտքագրեք ազգանունը">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Հեռախոս</label>
                            <input type="tel" class="form-control" placeholder="+374 XX XXXXXX">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Էլ. փոստ</label>
                            <input type="email" class="form-control" placeholder="example@email.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Քաղաք</label>
                            <select class="form-select">
                                <option>Երևան</option>
                                <option>Գյումրի</option>
                                <option>Վանաձոր</option>
                                <option>Այլ</option>
                            </select>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Ռոլ</label>
                                <select class="form-select">
                                    <option>Ուսանող</option>
                                    <option>Ինստրուկտոր</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Կարգավիճակ</label>
                                <select class="form-select">
                                    <option>Ակտիվ</option>
                                    <option>Սպասման մեջ</option>
                                    <option>Դադարեցված</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Չեղարկել</button>
                    <button type="button" class="btn btn-primary">Պահպանել ուսանողը</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit User Role Modal -->
    <div class="modal fade" id="editUserRoleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Խմբագրել օգտվողի կարգավիճակ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editUserRoleForm">
                        <input type="hidden" id="editUserId">
                        <div class="mb-3">
                            <label class="form-label">Օգտվող</label>
                            <input type="text" class="form-control" id="editUserName" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ռոլ (Կարգավիճակ)</label>
                            <select class="form-select" id="editUserRole" required>
                                <option value="Ուսանող">Ուսանող</option>
                                <option value="Ինստրուկտոր">Ինստրուկտոր</option>
                                <option value="Ադմին">Ադմին</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Չեղարկել</button>
                    <button type="button" class="btn btn-primary" id="saveUserRoleBtn">Պահպանել</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('../parts/scripts.ejs') %>
    <script>
    </script>
</body>

</html>
