<!doctype html>
<html lang="en">

<head><%- include('../parts/head.ejs') %></head>

<body>
    <!-- Navbar -->
    <%- include('../parts/navbar.ejs') %>

    <!-- Sidebar -->
    <%- include('../parts/sidebar.ejs') %>
    <!-- Main Content -->
    <main class="main-content">
        <section id="contacts">
            <div class="page-header">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Վահանակ</a></li>
                            <li class="breadcrumb-item active">Կոնտակտային տվյալներ</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">Կոնտակտային տվյալների կառավարում</h1>
                </div>
                <button type="button" class="btn btn-primary" id="saveContactsBtn">
                    <i class="bi bi-save me-2"></i>Պահպանել փոփոխությունները
                </button>
            </div>

            <!-- Contact Information Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Ընդհանուր տեղեկություն</h5>
                </div>
                <div class="card-body">
                    <form id="contactsForm">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-telephone me-2"></i>Հեռախոս
                                </label>
                                <input type="tel" class="form-control" id="phone" placeholder="+374 XX XXXXXX"
                                    value="+374 91 123456">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-envelope me-2"></i>Էլ. փոստ
                                </label>
                                <input type="email" class="form-control" id="email" placeholder="info@mg-drive.am"
                                    value="info@mg-drive.am">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-geo-alt me-2"></i>Հասցե / Տեղը
                                </label>
                                <input type="text" class="form-control" id="address" placeholder="Մուտքագրեք հասցեն"
                                    value="Արթիկ, Հայաստան">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-map me-2"></i>Google Maps Link
                                </label>
                                <input type="url" class="form-control" id="googleMaps"
                                    placeholder="https://maps.google.com/..."
                                    value="https://maps.google.com/?q=Artik,Armenia">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-clock me-2"></i>Աշխատանքային ժամեր
                            </label>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label small">Երկուշաբթի</label>
                                    <input type="text" class="form-control" id="monday" placeholder="09:00 - 18:00"
                                        value="09:00 - 18:00">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small">Երեքշաբթի</label>
                                    <input type="text" class="form-control" id="tuesday" placeholder="09:00 - 18:00"
                                        value="09:00 - 18:00">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small">Չորեքշաբթի</label>
                                    <input type="text" class="form-control" id="wednesday" placeholder="09:00 - 18:00"
                                        value="09:00 - 18:00">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small">Հինգշաբթի</label>
                                    <input type="text" class="form-control" id="thursday" placeholder="09:00 - 18:00"
                                        value="09:00 - 18:00">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small">Ուրբաթ</label>
                                    <input type="text" class="form-control" id="friday" placeholder="09:00 - 18:00"
                                        value="09:00 - 18:00">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small">Շաբաթ</label>
                                    <input type="text" class="form-control" id="saturday" placeholder="09:00 - 14:00"
                                        value="09:00 - 14:00">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small">Կիրակի</label>
                                    <input type="text" class="form-control" id="sunday" placeholder="Դուրս"
                                        value="Դուրս">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-globe me-2"></i>Սոցիալական ցանցեր
                            </label>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label small">Facebook</label>
                                    <input type="url" class="form-control" id="facebook"
                                        placeholder="https://facebook.com/..." value="">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label small">Instagram</label>
                                    <input type="url" class="form-control" id="instagram"
                                        placeholder="https://instagram.com/..." value="">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label small">YouTube</label>
                                    <input type="url" class="form-control" id="youtube"
                                        placeholder="https://youtube.com/..." value="">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-file-text me-2"></i>Լրացուցիչ տեղեկություն
                            </label>
                            <textarea class="form-control" id="additionalInfo" rows="4"
                                placeholder="Լրացուցիչ տեղեկություն կոնտակտային էջի համար..."></textarea>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview Card -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Նախադիտում</h5>
                </div>
                <div class="card-body">
                    <div class="contact-preview">
                        <div class="preview-item">
                            <i class="bi bi-telephone"></i>
                            <span id="previewPhone">+374 91 123456</span>
                        </div>
                        <div class="preview-item">
                            <i class="bi bi-envelope"></i>
                            <span id="previewEmail">info@mg-drive.am</span>
                        </div>
                        <div class="preview-item">
                            <i class="bi bi-geo-alt"></i>
                            <span id="previewAddress">Արթիկ, Հայաստան</span>
                        </div>
                        <div class="preview-item">
                            <i class="bi bi-clock"></i>
                            <div>
                                <div><strong>Երկուշաբթի - Ուրբաթ:</strong> <span id="previewWeekdays">09:00 -
                                        18:00</span></div>
                                <div><strong>Շաբաթ:</strong> <span id="previewSaturday">09:00 - 14:00</span></div>
                                <div><strong>Կիրակի:</strong> <span id="previewSunday">Դուրս</span></div>
                            </div>
                        </div>
                        <div class="preview-item" id="previewMaps" style="display: none;">
                            <i class="bi bi-map"></i>
                            <a href="#" target="_blank" id="previewMapsLink">Դիտել Google Maps-ում</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('../parts/scripts.ejs') %>
</body>

</html>