<!doctype html>
<html lang="en">
<head><%- include('../parts/head.ejs') %></head>
<body>
    <!-- Navbar -->
    <%- include('../parts/navbar.ejs') %>
    
    <!-- Sidebar -->
    <%- include('../parts/sidebar.ejs') %>
    <!-- Main Content -->
     <main class="main-content">
        <section id="analytics">
        <div class="page-header">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Վահանակ</a></li>
                        <li class="breadcrumb-item active">Վերլուծություններ</li>
                    </ol>
                </nav>
                <h1 class="page-title">Վերլուծություններ & ակտիվություն</h1>
            </div>
            <div class="d-flex gap-2">
                <input type="date" class="form-control" style="width: auto;">
                <input type="date" class="form-control" style="width: auto;">
            </div>
        </div>

        <!-- KPI Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-lg-3">
                <div class="stat-card">
                    <div class="icon primary">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <div class="label">Այս ամսվա նոր ուսանողներ</div>
                    <div class="number">87</div>
                    <div class="trend">+15% նախորդ ամսվանից</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card">
                    <div class="icon success">
                        <i class="bi bi-file-check"></i>
                    </div>
                    <div class="label">Ակտիվ թեստեր</div>
                    <div class="number">142</div>
                    <div class="trend">+8 այս ամիս</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card">
                    <div class="icon warning">
                        <i class="bi bi-percent"></i>
                    </div>
                    <div class="label">Միջին ավարտման տոկոսը</div>
                    <div class="number">78%</div>
                    <div class="trend">+3% նախորդ ամսվանից</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card">
                    <div class="icon info">
                        <i class="bi bi-eye"></i>
                    </div>
                    <div class="label">Օրվա այցելություններ</div>
                    <div class="number">1,234</div>
                    <div class="trend">+12% երեկվանից</div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Ուսանողների ակտիվություն ըստ օրերի</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-placeholder">Chart placeholder</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Թեստերի հաջողության տոկոս</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-placeholder">Chart placeholder</div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Կայքի այցելություններ ըստ սարքի</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-placeholder">Chart placeholder</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Groups Table -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Ամենաակտիվ խմբերը</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Խմբի անվանում</th>
                                        <th>Ուսանողներ</th>
                                        <th>Ակտիվություն</th>
                                        <th>Հաջողության տոկոս</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Խումբ A-2024-01</td>
                                        <td>15</td>
                                        <td>98%</td>
                                        <td>85%</td>
                                    </tr>
                                    <tr>
                                        <td>Խումբ B-2024-01</td>
                                        <td>18</td>
                                        <td>95%</td>
                                        <td>82%</td>
                                    </tr>
                                    <tr>
                                        <td>Խումբ C-2024-01</td>
                                        <td>12</td>
                                        <td>92%</td>
                                        <td>78%</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Վերջին գործողությունները</h5>
                    </div>
                    <div class="card-body">
                        <ul class="timeline">
                            <li class="timeline-item">
                                <div class="fw-bold">Նոր ուսանող գրանցվեց</div>
                                <div class="text-muted small">Արման Հովհաննիսյան • 2 րոպե առաջ</div>
                            </li>
                            <li class="timeline-item">
                                <div class="fw-bold">Թեստ ավարտվեց</div>
                                <div class="text-muted small">Թեստ A • 15 րոպե առաջ</div>
                            </li>
                            <li class="timeline-item">
                                <div class="fw-bold">Նոր խումբ ստեղծվեց</div>
                                <div class="text-muted small">Խումբ D-2024-01 • 1 ժամ առաջ</div>
                            </li>
                            <li class="timeline-item">
                                <div class="fw-bold">Նկար վերբեռնվեց</div>
                                <div class="text-muted small">Մեքենա 3 • 2 ժամ առաջ</div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </section>
    </main>


    <%- include('../parts/scripts.ejs') %>
</body>
</html>