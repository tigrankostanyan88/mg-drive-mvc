<!doctype html>
<html lang="en">
    <head><%- include('../parts/head.ejs') %></head>
    <body>
        <div class="container-scroller">
            <%- include('../parts/sidebar.ejs') %>
            <div class="container-fluid page-body-wrapper">
                <%- include('../parts/nav.ejs') %>
                <!-- Main panel -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <form action="/api/v1/question" method="post" enctype="multipart/form-data">
                            <!-- Main content -->
                            <div class="row">
                                <div class="col-md-6 mx-auto mb-4">
                                    <div class="input-group">
                                        <select class="text-white form-control mb-3" name="row_type" id="question_add_type">
                                            <option value="not" class="text-white">Ընտրեք հացրը ուր եք Ավելացնում</option>
                                            <option value="test" class="text-white">Ավելացնլե Թեստ</option>
                                            <option value="group" class="text-white">Ավելացնլե Խումբ</option>
                                        </select>
                                    </div>
                                    <div class="selected_row"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mx-auto grid-margin stretch-card">
                                    <div class="card question_card">
                                        <div class="card-body">
                                            <button type="button" class="removeImageBtn btn btn-danger mb-2">Ջնջել նկարը</button>
                                            <div class="image questionImage">
                                                <label>
                                                    <input type="file" name="question_img" style="opacity: 0;">
                                                    <img src="">
                                                </label>
                                            </div>

                                            <div class="py-3">
                                                <textarea name="question" placeholder="Հարց․․․"  class="form-control mb-3"></textarea>
                                                <small class="p-1 text-muted mb-2 d-block">Պաստասխաներ ♻️</small>
                                                
                                                <ul class="list-group answer_list_items"></ul>
                                                <button type="button" class="btn btn-primary py-2 px-3 mb-2 add_answer">Ավելացնլե Պաստասխան․․․</button>
                                            </div>
                                            <select name="correctAnswerIndex" class="form-control text-warning mb-3 correctAnswerIndex">
                                                <option value="*">Ընտրել ճիշտ Պաստասխանը</option>
                                            </select>

                                            <button type="submit" class="btn btn-success py-2 px-3">Ուղարկել</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <%- include('../parts/footer.ejs') %>
                </div>
            </div>
        </div>
        <%- include('../parts/scripts.ejs') %>
    </body>
</html>