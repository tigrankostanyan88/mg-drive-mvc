    <!-- Upload Image Modal -->
    <div class="modal fade" id="uploadImageModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Վերբեռնել նոր նկար</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Ընտրել ֆայլը</label>
                            <input type="file" class="form-control" accept="image/*">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Վերնագիր</label>
                            <input type="text" class="form-control" placeholder="Մուտքագրեք վերնագիրը">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Նկարագրություն</label>
                            <textarea class="form-control" rows="3" placeholder="Մուտքագրեք նկարագրությունը"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Կատեգորիա</label>
                            <select class="form-select">
                                <option>Մեքենաներ</option>
                                <option>Դասասենյակներ</option>
                                <option>Ինստրուկտորներ</option>
                                <option>Այլ</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="showOnSite" checked>
                                <label class="form-check-label" for="showOnSite">
                                    Ցուցադրել կայքում
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Չեղարկել</button>
                    <button type="button" class="btn btn-primary">Վերբեռնել</button>
                </div>
            </div>
