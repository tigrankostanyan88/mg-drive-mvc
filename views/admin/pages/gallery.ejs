<!doctype html>
<html lang="en">

<head><%- include('../parts/head.ejs') %></head>

<body>
    <%- include('../parts/navbar.ejs') %>
    <%- include('../parts/sidebar.ejs') %>
    <%- include('../parts/alert') %>
    <%- include('../parts/confirm') %>
    <!-- Main Content -->
    <main class="main-content">
        <section id="images">
            <div class="page-header">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Վահանակ</a></li>
                            <li class="breadcrumb-item active">Նկարների կառավարում</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">Նկարների կառավարում</h1>
                </div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadImageModal">
                    <i class="bi bi-upload me-2"></i>Վերբեռնել նոր նկար
                </button>
            </div>

            <!-- Filters -->
            <div class="filter-row">
                <div class="row g-3">
                    <div class="col-md-6">
                        <select class="form-select">
                            <option>Տեսակ</option>
                            <option>Մեքենաներ</option>
                            <option>Դասասենյակներ</option>
                            <option>Ինստրուկտորներ</option>
                            <option>Այլ</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" placeholder="Փնտրել նկար…">
                    </div>
                </div>
            </div>
            <!-- Image Grid -->
            <div class="image-grid">
                <% gallery.forEach(item => { %>
                <%
                    let image =  "../client/images/no-image-profile.jpg";
                    if(item) {
                        if (item.files) {
                            let foundImage = item.files.find(file => file.name_used === "gallery_img");
                            
                            if (foundImage) {
                            image = `../images/gallery/large/${foundImage.name}.${foundImage.ext}`;
                            }
                        }
                    }
                %>
                <div class="image-card" 
                     data-id="<%= item.id %>"
                     data-title="<%- item.title %>"
                     data-text="<%- item.text || '' %>"
                     data-image="<%- image %>">
                    <div class="image-container">
                        <img src="<%- image %>"
                            alt="Մեքենա 1"
                            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="image-placeholder" style="display: none;">
                            <i class="bi bi-image" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                        <div class="image-overlay">
                            <div class="overlay-content">
                                <div class="overlay-title"><%= item.title %></div>
                                <div class="overlay-meta"><%= item.text %></div>
                                <div class="overlay-meta"><%- helpers.getDate(item.date) %></div>
                                <span class="badge bg-success overlay-badge">Ակտիվ</span>
                            </div>
                            <div class="overlay-actions">
                                <button class="btn btn-sm btn-outline-primary btn-edit">
                                    <i class="bi bi-pencil me-1"></i>Խմբագրել
                                </button>
                                <form action="/api/v1/gallery/<%- item.id %>" method="delete" class="gallery-delete-form">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash me-1"></i>Ջնջել
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
    </main>

    <!-- Upload Image Modal -->
    <div class="modal fade" id="uploadImageModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Վերբեռնել նոր նկար</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="galleryUploadForm">
                        <div class="mb-3">
                            <label class="form-label">Ընտրել ֆայլը</label>
                            <input type="file" class="form-control" accept="image/*" name="gallery_img" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Վերնագիր</label>
                            <input type="text" class="form-control" placeholder="Մուտքագրեք վերնագիրը" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Նկարագրություն</label>
                            <textarea class="form-control" rows="3" placeholder="Մուտքագրեք նկարագրությունը" name="text"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Կատեգորիա</label>
                            <select class="form-select">
                                <option>Մեքենաներ</option>
                                <option>Դասասենյակներ</option>
                                <option>Ինստրուկտորներ</option>
                                <option>Այլ</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="showOnSite" checked>
                                <label class="form-check-label" for="showOnSite">
                                    Ցուցադրել կայքում
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Չեղարկել</button>
                    <button type="button" class="btn btn-primary" id="uploadGalleryBtn">Վերբեռնել</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Image Modal -->
    <div class="modal fade" id="galleryEditModal" tabindex="-1" data-bs-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Խմբագրել նկարը</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="galleryEditForm" method="patch" action="/api/v1/gallery/" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Վերնագիր</label>
                            <input type="text" name="title" class="form-control validate" placeholder="Մուտքագրեք վերնագիրը">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Նկարագրություն</label>
                            <textarea name="text" class="form-control validate" rows="3" placeholder="Մուտքագրեք նկարագրությունը"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Ընթացիկ նկար</label>
                            <div id="galleryEditImagePreview"></div>
                        </div>

                        <div class="form-group mb-2">
                            <label class="form-label fw-bold">Փոխել նկարը</label>
                            <%- include('../parts/cropImg', { filename: 'gallery_img', cropId: 'editGallery' }) %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Փակել</button>
                        <button type="submit" class="btn btn-primary">Պահպանել</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../parts/scripts.ejs') %>
    <script>
        document.querySelectorAll('.image-card .btn-edit').forEach(function(btn) {
            btn.addEventListener('click', function() {
                const card = btn.closest('.image-card');
                const id = card?.dataset.id;
                const title = card?.dataset.title || '';
                const text = card?.dataset.text || '';
                const image = card?.dataset.image || '';

                const form = document.getElementById('galleryEditForm');
                form.action = '/api/v1/gallery/' + id;

                const titleInput = form.querySelector('input[name="title"]');
                const textArea = form.querySelector('textarea[name="text"]');
                const preview = document.getElementById('galleryEditImagePreview');

                if (titleInput) titleInput.value = title;
                if (textArea) textArea.value = text;
                if (preview) {
                    preview.innerHTML = image 
                        ? `<img src="${image}" class="img-fluid rounded mb-2" style="max-height:250px;">` 
                        : '';
                }

                new bootstrap.Modal(document.getElementById('galleryEditModal')).show();
            });
        });
    </script>
</body>
</html>
