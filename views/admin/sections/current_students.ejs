<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between mb-3">
                <h4 class="card-title mb-1">Ընթացիկ <a href="/admin/students">ուսանողները</a></h4>
                <p class="text-muted mb-1">Տվյալների կարգավիճակը</p>
            </div>
            <div class="row">
                <% if(users.length) { %>
                <div class="col-12">
                    <div class="preview-list">
                        <% users.forEach(user => { %>
                            <% if(user.role == 'student') { %>
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon">
                                        <img class="object-fit rounded-circle" src="https://discoverymood.com/wp-content/uploads/2020/04/Mental-Strong-Women-min-480x340.jpg" alt="">
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject"><%- user.name %></h6>
                                        <p class="text-muted mb-0"><%- user.email %></p>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-muted"><%- helpers.getDate(user.date) %></p>
                                        <p class="text-muted mb-0">Գրանցումից անցել է | <span><%- helpers.timeSince(user.date) %></span></p>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        <% }); %>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>