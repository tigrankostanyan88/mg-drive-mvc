<form class="needs-validation" action="/api/v1/user/signUp" method="post" novalidate>
    <!-- Full Name -->
    <div class="mb-3">
        <label for="fullName" class="form-label">Անուն և Ազգանուն</label>
        <input type="text" class="form-control" name="name" placeholder="Օրինակ՝ Արմեն Սարգսյան" required>
        <div class="invalid-feedback">
            Խնդրում ենք մուտքագրել ձեր անունն ու ազգանունը։
        </div>
    </div>

    <!-- Phone -->
    <div class="mb-3">
        <label for="phone" class="form-label">Հեռախոսահամար</label>
        <input type="tel" class="form-control" name="phone" placeholder="+374 99 123456" pattern="^\+374\d{8}$" required>
        <div class="invalid-feedback">
            Խնդրում ենք մուտքագրել վավեր հեռախոսահամար (+374XXXXXXXX ձևաչափով)։
        </div>
    </div>

    <!-- Email -->
    <div class="mb-3">
        <label for="email" class="form-label">Էլ․ փոստ</label>
        <input type="email" class="form-control" name="email" placeholder="example@mail.com" required>
        <div class="invalid-feedback">
            Խնդրում ենք մուտքագրել վավեր էլ․ փոստ։
        </div>
    </div>

    <!-- Password -->
    <div class="mb-3 input_field">
        <label for="password" class="form-label">Գաղտնաբառ</label>
        <input type="password" class="form-control" name="password" minlength="6" required>
        <div class="invalid-feedback">
            Գաղտնաբառը պետք է լինի առնվազն 6 նիշ։
        </div>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn w-100 text-white">
        Գրանցվել
    </button>
</form>
