<section id="team" class="team py-5" style="background-color: rgba(248,249,250,0.3);">
  <div class="container">

    <!-- Header -->
    <div class="text-center mx-auto mb-5 w-75">
      <span class="badge bg-secondary mb-3">
        <i class="fas fa-users me-1"></i>
        Ծանոթացեք մեր փորձառու դասախոսների հետ
      </span>
      <h2 class="display-4 fw-bold mb-3">
        Ծանոթացեք <span class="text-gradient">մեր թիմին</span>
      </h2>
      <p class="text-muted">Մեր հավաստագրված մարզիչները տարիների փորձ և անվտանգ վարորդական կրթության հանդեպ կիրք են
        բերում։
        Յուրաքանչյուր մարզիչ հատուկ պատրաստված է երիտասարդ վարորդների հետ աշխատելու համար։</p>
    </div>

    <!-- Instructors Grid -->
    <div class="row g-4 mb-5">
      <!-- Instructor 1 -->
      <% users.forEach(user => { %>
         <%
            let image = { img: "../client/images/no-image-profile.jpg" };
            if(user) {
                if (user.files) {
                    let foundImage = user.files.find(file => file.name_used === "user_img");
                    
                    if (foundImage) {
                    image.img = `../client/images/users/large/${foundImage.name}.${foundImage.ext}`;
                    }
                }
            }
        %>
        <% if(user.role === 'team-member') { %>
        <div class="col-md-6 col-lg-4 scroll_animate">
          <div class="card border-1 h-100 shadow-sm rounded rounded-4">
            <div class="position-relative overflow-hidden">
              <img
                src="<%- image.img %>"
                class="card-img-top" alt="Sarah Johnson" style="height: 320px; object-fit: cover;">
              <div class="card-content position-absolute start-0 end-0 d-flex justify-content-between text-white">
                <div class="text-center">
                  <div class="fw-bold">1000+</div>
                  <small>ՈՒսանողներ</small>
                </div>
                <div class="text-center">
                  <div class="fw-bold">100%</div>
                  <small>Արդյունք</small>
                </div>
                <!-- rating -->
                <div class="text-center">
                  <div class="start">
                    <small>վարկանիշ</small>
                  </div>
                  <div class="fw-bold">
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    <i class="fas fa-star text-warning"></i>
                    5.0</div>
                </div>
              </div>
            </div>
            <!-- Card content -->
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <h5 class="card-title mb-1"><%- user.name %></h5>
                  <p class="text-primary mb-0">Ավագ ուսուցիչ</p>
                </div>
                <span class="badge bg-light text-dark">
                  <i class="fas fa-clock me-1"></i>
                  <%- user.experience %> + Տարիներ փ․
                </span>
              </div>
              <p class="text-muted small mb-3">
                Սառան մասնագիտանում է դեռահասներին անվտանգ և վստահ վարել սովորեցնելու գործում: Ավելի քան 8 տարվա փորձով նա
                օգնել է հարյուրավոր երիտասարդ վարորդների զարգացնել անհրաժեշտ հմտություններ:
              </p>
              <div class="mb-3">
                <div class="d-flex align-items-center gap-2 mb-1">
                  <i class="fas fa-award text-warning"></i>
                  <span class="small fw-medium">Մասնագիտացում</span>
                </div>
                <span class="badge bg-secondary text-xs"><%- user.specialization %></span>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      <% }); %>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5">
      <p class="text-muted mb-3">Պատրա՞ստ եք սովորել մեր փորձառու մարզիչներից։</p>
      <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
        <button class="btn fancy-button btn-primary px-4 py-2 text-white">Պլանավորեք հանդիպում</button>
        <button class="btn btn-outline-primary px-4 py-2 text-white">Իմացեք մեր մեթոդների մասինs</button>
      </div>
    </div>
  </div>
</section>